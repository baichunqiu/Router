<resources>

    <style name="IMTheme.Basic" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 统一切换Theme right in left out-->
    <style name="IMTheme.Transparent_Right" parent="@style/IMTheme.Basic">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/Animation_right_to_left</item>
    </style>

    <!-- Theme left in right out-->
    <style name="IMTheme.Transparent_Left" parent="@style/IMTheme.Basic">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowAnimationStyle">@style/Animation_left_to_right</item>
    </style>

    <!-- 主界面Theme 锁定-->
    <style name="MainPageTheme" parent="android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation_right_to_left</item>
    </style>

    <!--切换动画-->
    <style name="Animation_right_to_left" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="Animation_left_to_right" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_right_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_left_out</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>


    <style name="progressbar_loading_style">
        <item name="android:maxWidth">50.0dip</item>
        <item name="android:maxHeight">50.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/progressbg_loading</item>
        <item name="android:minWidth">50.0dip</item>
        <item name="android:minHeight">50.0dip</item>
    </style>

    <style name="progressbar_refresh_style">
        <item name="android:maxWidth">25.0dip</item>
        <item name="android:maxHeight">25.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/progressbg_loading</item>
        <item name="android:minWidth">25.0dip</item>
        <item name="android:minHeight">25.0dip</item>
    </style>

    <style name="main_text_blue_green_14">
        <item name="android:textColor">#00BFA5</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SpinKitView">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:minWidth">60dip</item>
        <item name="android:maxWidth">60dip</item>
        <item name="android:minHeight">60dip</item>
        <item name="android:maxHeight">60dip</item>
    </style>
</resources>
