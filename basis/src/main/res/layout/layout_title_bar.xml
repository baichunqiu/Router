<?xml version="1.0" encoding="utf-8"?>
<org.basis.widget.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_title_bg">

    <!-- id  布局名 是固件的  在ids文件中的定义 -->

    <org.basis.widget.percent.PercentLinearLayout
        android:id="@+id/ll_back_titlebar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/selector_main_item_click"
        android:gravity="center"
        app:layout_heightPercent="12%w"
        app:layout_widthPercent="12%w">

        <ImageView
            android:id="@+id/iv_left_titlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            android:visibility="visible" />
    </org.basis.widget.percent.PercentLinearLayout>

    <org.basis.widget.percent.PercentLinearLayout
        android:id="@+id/ll_middle_titlebar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="12%w"
        app:layout_marginLeftPercent="12%w"
        app:layout_marginRightPercent="12%w">

        <TextView
            android:id="@+id/tv_title_titlebar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/net_loading"
            android:textColor="@color/color_white"
            android:textSize="17sp"
            android:visibility="gone" />
    </org.basis.widget.percent.PercentLinearLayout>

    <org.basis.widget.percent.PercentLinearLayout
        android:id="@+id/ll_right_titlebar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:gravity="center_vertical|right"
        app:layout_heightPercent="12%w"
        app:layout_widthPercent="20%w">

        <TextView
            android:id="@+id/tv_right_titlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_main_item_click"
            android:text="right"
            android:textColor="@color/color_white"
            android:textSize="12sp"
            app:layout_marginRightPercent="12%w" />
    </org.basis.widget.percent.PercentLinearLayout>

</org.basis.widget.percent.PercentFrameLayout>
