<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/toast_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_50px"
        android:layout_marginRight="@dimen/dimens_50px"
        android:background="@drawable/shape_toast_bg"
        android:paddingBottom="@dimen/dimens_15px"
        android:paddingLeft="@dimen/dimens_25px"
        android:paddingRight="@dimen/dimens_25px"
        android:paddingTop="@dimen/dimens_15px"
        android:text="message"
        android:textColor="@color/color_white"
        android:textSize="14sp" />
</LinearLayout>
