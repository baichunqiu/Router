<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_basis_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <org.basis.network.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        style="@style/main_item_btn_blue"
        android:onClick="progress"
        android:text="trans progress" />

    <Button
        style="@style/main_item_btn_blue"
        android:onClick="basecontroler"
        android:text="trans use basecontroler" />

    <Button
        style="@style/main_item_btn_blue"
        android:onClick="routerActivity"
        android:text="trans router activity" />

    <Button
        style="@style/main_item_btn_blue"
        android:onClick="routerService"
        android:text="trans router service" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimens_25px"
        android:background="@color/color_gray"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_gray"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                style="@style/main_text_btn_blue"
                android:layout_margin="@dimen/dimens_40px"
                android:onClick="adapterAutoSize"
                android:text="adapterAutoSize" />

            <Button
                style="@style/main_text_btn_blue"
                android:layout_margin="@dimen/dimens_40px"
                android:onClick="mediaHelper"
                android:text="Media_Helper" />

            <Button
                style="@style/main_text_btn_blue"
                android:layout_margin="@dimen/dimens_40px"
                android:onClick="soundPoolHelper"
                android:text="SoundPool_Helper" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_gray"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                style="@style/main_text_btn_blue"
                android:layout_margin="@dimen/dimens_40px"
                android:onClick="videoPlayer"
                android:text="video_player" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        style="@style/main_text_btn_blue"
        android:layout_margin="@dimen/dimens_40px"
        android:text="@string/app_name" />

    <TextView
        style="@style/main_item_margin"
        android:background="@drawable/selector_btn_bg_blue"
        android:gravity="center_vertical"
        android:padding="@dimen/dimens_25px"
        android:text="@string/app_name"
        android:textSize="@dimen/font_size_16sp" />

</LinearLayout>
